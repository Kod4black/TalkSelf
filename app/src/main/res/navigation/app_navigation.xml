<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/conversationFragment">
    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.github.odaridavid.talkself.ui.conversation.ConversationFragment"
        android:label="ConversationFragment">

        <action
            android:id="@+id/conversation_to_chat"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/fromright"
            app:exitAnim="@anim/toleft"
            app:popEnterAnim="@anim/fromleft"
            app:popExitAnim="@anim/toright" />

        <argument
            android:name="conversation"
            app:argType="com.github.odaridavid.talkself.ui.models.ConversationUiModel"
            app:nullable="true" />
        <action
            android:id="@+id/conversation_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.github.odaridavid.talkself.ui.chat.ChatFragment"
        android:label="ChatFragment">

        <action
            android:id="@+id/chat_to_users"
            app:destination="@id/usersFragment"
            app:enterAnim="@anim/fromright"
            app:exitAnim="@anim/toleft"
            app:popEnterAnim="@anim/fromleft"
            app:popExitAnim="@anim/toright" />

        <argument
            android:name="conversation"
            app:argType="com.github.odaridavid.talkself.ui.models.ConversationUiModel"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.github.odaridavid.talkself.ui.user.UsersFragment"
        android:label="UsersFragment" >
        <action
            android:id="@+id/users_to_editUser"
            app:destination="@id/memojiFragment"
            app:enterAnim="@anim/fromright"
            app:exitAnim="@anim/toleft"
            app:popEnterAnim="@anim/fromleft"
            app:popExitAnim="@anim/toright" />

        <argument
            android:name="conversation"
            app:argType="com.github.odaridavid.talkself.ui.models.ConversationUiModel"
            app:nullable="false" />

        <argument
            android:name="user"
            app:argType="com.github.odaridavid.talkself.ui.models.UserUiModel"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/memojiFragment"
        android:name="com.github.odaridavid.talkself.ui.edituser.EditUserFragment"
        android:label="EditUserFragment" >

        <argument
            android:name="user"
            app:argType="com.github.odaridavid.talkself.ui.models.UserUiModel"
            app:nullable="false" />

    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.github.odaridavid.talkself.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />

</navigation>
