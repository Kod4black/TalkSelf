<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_navigation"
    app:startDestination="@id/conversationFragment">
    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.conversation.ConversationFragment"
        android:label="ConversationFragment">
        <action
            android:id="@+id/conversation_to_chat"
            app:destination="@id/chatFragment"></action>

        <argument
            android:name="conversation"
            app:nullable="true"
            app:argType="com.github.odaridavid.talkself.models.Conversation" />


    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.chat.ChatFragment"
        android:label="ChatFragment">

        <action
            android:id="@+id/chat_to_users"
            app:destination="@id/usersFragment"/>

        <argument
            android:name="conversation"
            app:nullable="true"
            app:argType="com.github.odaridavid.talkself.models.Conversation" />
    </fragment>

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.user.UsersFragment"
        android:label="UsersFragment" >
        <action
            android:id="@+id/usersFragment_to_memoji"
            app:destination="@id/memojiFragment" />
    </fragment>
    <fragment
        android:id="@+id/memojiFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.memoji.MemojiFragment"
        android:label="MemojiFragment" />


</navigation>