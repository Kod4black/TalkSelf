<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/conversationFragment">
    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.conversation.ConversationFragment"
        android:label="ConversationFragment">
        <action
            android:id="@+id/conversation_to_chat"
            app:destination="@id/chatFragment">
            <argument
                android:name="conversation"
                app:argType="com.github.odaridavid.talkself.models.Conversation" />
        </action>


    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.github.odaridavid.talkself.ui.fragments.chat.ChatFragment"
        android:label="ChatFragment" >
        <argument
            android:name="conversation"
            app:argType="com.github.odaridavid.talkself.models.Conversation" />
    </fragment>
</navigation>